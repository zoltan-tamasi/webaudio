html( lang="en" )
    head
        title Webaudio app
        meta( charset='utf-8' )
        meta( name='viewport', content='width=device-width, initial-scale=1.0' )
        
        link(href="//maxcdn.bootstrapcdn.com/bootswatch/3.3.0/flatly/bootstrap.min.css", rel="stylesheet")
 
    body(style="padding-bottom:10rem;")
        .container
            .row
                .col-md-4.col-sm-4.col-xs-12
                    nav.navbar.navbar-default( role="navigation" )
                        .navbar-header
                            button.navbar-toggle.collapsed( type="button", data-toggle="collapse", data-target="#navbar-inverse", aria-expanded="false", aria-controls="navbar")
                                span.sr-only Toggle navigation
                                span.icon-bar
                                span.icon-bar
                                span.icon-bar
                            a.navbar-brand( href="#" ) Webaudio app
                     
                        #navbar-inverse.collapse.navbar-collapse
                            ul.nav.navbar-nav
                                li.active: a( href="#") Page1
                                li: a( href="#about" ) Page2

                    .panel.panel-default
                        .panel-heading
                            h3.panel-title Selected sample
                        .panel-body(style="min-height: 337px;") Metadata

                    .panel.panel-default
                        .panel-heading
                            h3.panel-title Transport
                        .panel-body(style="min-height: 100px;") content...
                                                        
                .col-md-8.col-sm-8.col-xs-12
                    nav.navbar.navbar-default( role="navigation" )
                        .navbar-header
                            .input-group( style="margin-top: 10px; margin-left: 20px; margin-right: 20px;" )
                                input#search( type="text", class="form-control", placeholder="Search for...", aria-describedby="basic-addon1" )
                                span.input-group-btn
                                    button( class="btn btn-default", type="button") Go!

                    .panel.panel-default
                        .panel-heading
                            h3.panel-title Search results
                        .panel-body(style="min-height: 500px;") content...
            .row
                .panel.panel-default
                        .panel-heading
                            h3.panel-title Waveform
                        .panel-body(style="min-height: 100px;") content...
    
        script( src='//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js' )
